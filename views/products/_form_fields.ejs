<div></div>
<label>Product Name</label>
<input type="text" name="name" value = "<%= product.name %>">
</div>
<div>
<label>Category</label>
<select name="category">
    <% categories.forEach(category => { %>
        <% if(category.id === product.category) {%>
        <option selected label="<%= category.name %>" value="<%= category.id %> ">
        
        <% } else { %>
        <option label="<%= category.name %> " value="<%= category.id %> " >
            <% } %> 
            <% }) %>   
</select>
</div>

<div>
<label>Added On</label>
<input type="date" name="addedondate" 
value = "<%= product.addedondate == null ?  '' : 
product.addedondate.toISOString().split('T')[0] %>">
</div>

<div>
    <label>Price</label>
    <input type="number" name="price" 
    value = "<%= product.price %>">
    </div>

<div>
        <label>Product picture</label>
        <input type="file" name="productpic">
 </div>

 <div>
    <label>Description</label>
    <textarea name="description"><%= product.description %> </textarea>
</div>